<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/variableAccent" />
            <size
                android:width="20dp"
                android:height="20dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="4dp"
                android:color="@color/transparent" />
            <solid android:color="@android:color/white" />
            <size
                android:width="10dp"
                android:height="10dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="10dp"
                android:color="@color/transparent" />
            <solid android:color="@color/variableAccent" />
            <size
                android:width="5dp"
                android:height="5dp" />
        </shape>
    </item>
</layer-list>
