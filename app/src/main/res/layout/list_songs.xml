<?xml version="1.0" encoding="utf-8"?><!-- TODO - Add swipe on list item for Play and Add options -->

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:layout_marginStart="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="4dp"
    android:clickable="true"
    android:contextClickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/bgColor"
    app:cardElevation="0dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgPlayIndicator"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_play_indicator"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/tvListArtistName"
            app:layout_constraintEnd_toStartOf="@id/tvListSongName"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvListSongName"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:gravity="bottom"
            android:paddingStart="16dp"
            android:paddingEnd="0dp"
            android:singleLine="true"
            android:textStyle="normal"
            app:fontFamily="@font/segoeui"
            app:layout_constraintEnd_toStartOf="@+id/tvListDuration"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/imgPlayIndicator"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvListDuration"
            android:layout_width="70dp"
            android:layout_height="54dp"
            android:fontFamily="@font/segoeuisl"
            android:gravity="center"
            android:singleLine="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvListArtistName"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:gravity="top"
            android:paddingStart="16dp"
            android:paddingEnd="0dp"
            android:singleLine="true"
            app:fontFamily="@font/segoeuisl"
            app:layout_constraintEnd_toStartOf="@+id/tvListDuration"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvListSongName" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
