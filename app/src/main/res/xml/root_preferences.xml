<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:layout="@layout/custom_preference_category"
        android:title="@string/find_music">
        <Preference
            android:key="pref_key_push"
            android:layout="@layout/custom_preference"
            android:title="@string/find_music_description" />
    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/custom_preference_category"
        android:title="@string/audio_fx">
