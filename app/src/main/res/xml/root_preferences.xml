            android:key="pref_key_push"
            android:layout="@layout/custom_switch_preference"
            android:title="@string/art_as_wallpaper_description" />
    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/custom_preference_category"
        android:title="@string/app">
        <Preference
            android:key="pref_key_push"
            android:layout="@layout/custom_preference"
            android:title="@string/help" />
        <Preference
            android:key="pref_key_push"
            android:layout="@layout/custom_preference"
            android:title="@string/feedback" />
        <Preference
            android:key="pref_key_push"
            android:layout="@layout/custom_preference"
            android:title="@string/about" />
        <Preference
            android:key="pref_key_push"
            android:layout="@layout/custom_preference"
            android:title="@string/sign_in_help" />
