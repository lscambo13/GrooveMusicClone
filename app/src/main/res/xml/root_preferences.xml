            android:key="pref_key_push"
            android:layout="@layout/custom_preference"
            android:title="@string/equalizer" />
    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/custom_preference_category"
        android:title="@string/media_info">
        <SwitchPreferenceCompat
            android:key="pref_key_push"
            android:layout="@layout/custom_switch_preference"
            android:title="@string/media_retriever_description" />
    </PreferenceCategory>

    <PreferenceCategory
        android:layout="@layout/custom_preference_category"
        android:title="@string/display_artist_art">
        <SwitchPreferenceCompat
